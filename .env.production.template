# SmartCompute Production Environment Template
# Copy to .env.production and fill in actual values
# Never commit actual .env.production to git

# Secret Management Backend
SECRET_BACKEND=vault
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=your_vault_token_here

# Database Configuration
DATABASE_URL=postgresql://smartcompute:${DB_PASSWORD}@postgres:5432/smartcompute
DB_PASSWORD=your_secure_db_password_here
PAYMENT_DB_PASSWORD=your_secure_payment_db_password_here
MONITORING_DB_PASSWORD=your_secure_monitoring_db_password_here

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_long_random_jwt_secret_here_at_least_32_chars

# Payment Gateway
PAYMENT_WEBHOOK_SECRET=your_payment_webhook_secret_here

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Service URLs (internal communication)
CORE_SERVICE_URL=http://smartcompute-core:9000
PAYMENT_SERVICE_URL=http://smartcompute-payment:9001

# Feature Flags
ENABLE_DOCS=false
LOG_LEVEL=INFO

# External API Keys (store in Vault in production)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id