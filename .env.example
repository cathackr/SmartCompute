# App
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=change_me_strong_secret

# DB
DATABASE_URL=postgresql://postgres:postgres@db:5432/smartcompute

# Celery / Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# MercadoPago
MP_ACCESS_TOKEN=your_mercadopago_token
MP_PUBLIC_KEY=your_mp_public_key

# SMTP / Mail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=consultas@smartcompute.ar
SMTP_PASSWORD=app_password_or_api_key
MAIL_DEFAULT_SENDER=consultas@smartcompute.ar

# Twilio (WhatsApp) - Opcional
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=

# N8N webhook url
N8N_WEBHOOK_URL=http://localhost:5678/webhook/smartcompute

# Seguridad
ALLOWED_CORS_ORIGINS=http://localhost:3000
API_KEYS=key1,key2
RATE_LIMIT_PER_MINUTE=60/min
