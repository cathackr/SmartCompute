# SmartCompute Security Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# Server Configuration
SMARTCOMPUTE_SERVER_URL=https://localhost:8443

# API Authentication (REQUIRED)
SMARTCOMPUTE_API_KEY=your-secure-api-key-here

# JWT Secret (for server) - Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SMARTCOMPUTE_JWT_SECRET=your-jwt-secret-here

# Flask Secret Key (for web server sessions) - Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SMARTCOMPUTE_FLASK_SECRET_KEY=your-flask-secret-here

# Database Encryption Key (Fernet) - Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SMARTCOMPUTE_ENCRYPTION_KEY=your-encryption-key-here

# Admin User Credentials (REQUIRED for central bridge server)
# Use strong passwords - minimum 16 characters
SMARTCOMPUTE_ADMIN_PASSWORD=your-strong-admin-password-here
SMARTCOMPUTE_OPERATOR_PASSWORD=your-operator-password-here

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# SIEM Integration (optional)
SPLUNK_TOKEN=
SPLUNK_HOST=

# Payment Gateway (if using payments)
PAYMENT_API_KEY=
PAYMENT_WEBHOOK_SECRET=

# Industrial Reports Encryption (REQUIRED for industrial module)
# Generate salt: python3 -c "import os; print(os.urandom(16).hex())"
REPORTS_ENCRYPTION_SALT=
