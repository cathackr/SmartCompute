# SmartCompute Security Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# Server Configuration
SMARTCOMPUTE_SERVER_URL=https://localhost:8443

# API Authentication (REQUIRED)
SMARTCOMPUTE_API_KEY=your-secure-api-key-here

# JWT Secret (for server)
SMARTCOMPUTE_JWT_SECRET=your-jwt-secret-here

# Database Encryption Key (for server)
SMARTCOMPUTE_ENCRYPTION_KEY=your-encryption-key-here

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# SIEM Integration (optional)
SPLUNK_TOKEN=
SPLUNK_HOST=

# Payment Gateway (if using payments)
PAYMENT_API_KEY=
PAYMENT_WEBHOOK_SECRET=
