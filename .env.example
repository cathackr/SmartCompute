# MercadoPago Production Keys (REEMPLAZAR CON TUS CLAVES REALES)
MP_ACCESS_TOKEN=APP_USR-XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX-XXXXXXXX
MP_PUBLIC_KEY=APP_USR-XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX

# Database Passwords (GENERAR PASSWORDS SEGURAS DE 32+ CARACTERES)
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_32_CHAR_PASSWORD
POSTGRES_DEV_PASSWORD=REPLACE_WITH_SECURE_32_CHAR_DEV_PASSWORD
POSTGRES_TEST_PASSWORD=REPLACE_WITH_SECURE_32_CHAR_TEST_PASSWORD
DB_PASSWORD=REPLACE_WITH_SECURE_32_CHAR_PASSWORD

# Redis Security (GENERAR PASSWORD SEGURA DE 32+ CARACTERES)
REDIS_PASSWORD=REPLACE_WITH_SECURE_32_CHAR_REDIS_PASSWORD

# Grafana Admin (GENERAR PASSWORD SEGURA DE 32+ CARACTERES)
GRAFANA_ADMIN_PASSWORD=REPLACE_WITH_SECURE_32_CHAR_GRAFANA_PASSWORD

# API Security (GENERAR CLAVES DE 64+ CARACTERES)
WEBHOOK_SECRET=REPLACE_WITH_SECURE_64_CHAR_WEBHOOK_SECRET
JWT_SECRET_KEY=REPLACE_WITH_SECURE_64_CHAR_JWT_SECRET
ENCRYPTION_KEY=REPLACE_WITH_SECURE_64_CHAR_ENCRYPTION_KEY

# Database URLs (USAR LAS PASSWORDS GENERADAS ARRIBA)
DATABASE_URL=postgresql://smartcompute:${POSTGRES_PASSWORD}@localhost:5432/smartcompute
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0

# Environment
NODE_ENV=production
PYTHON_ENV=production

# =================================================================
# OPCIONAL: SERVICIOS ADICIONALES
# =================================================================

# SMTP / Mail (OPCIONAL)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=your_email@domain.com

# Twilio WhatsApp (OPCIONAL)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_WHATSAPP_FROM=whatsapp:+1234567890

# Webhook Integration (OPCIONAL)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/smartcompute

# Security Settings
ALLOWED_CORS_ORIGINS=https://your-domain.com
API_KEYS=generate_secure_api_key_1,generate_secure_api_key_2
RATE_LIMIT_PER_MINUTE=100
